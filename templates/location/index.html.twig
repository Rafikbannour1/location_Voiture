<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

    
        <!-- end navbar side -->
        <!--  page-wrapper -->
        <div id="page-wrapper">

            
            <div class="row">
                 <!--  page header -->
                <div class="col-lg-12">
                    <h1 class="page-header"> Mes locations</h1>
                </div>
                 <!-- end  page header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Tous les voitures
                        </div>
                      
                               <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Cin_utilisateur</th>
                                            <th>Nom</th>
                                            <th>Email</th>
                                            <th>Date_de_location</th>
                                           
                                            <th>Code du voiture</th>
                                            <th>actions</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for location in locations %}
            <tr>
              
              
                <td>{{ location.cin }}</td>
                <td>{{ location.nom }}</td>
                <td>{{ location.email }}</td>
                <td>DE : {{ location.dateDebut ? location.dateDebut|date('Y-m-d H:i:s') : '' }} a {{ location.dateFin ? location.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td></td>
                <td>{{ location.code_voiture }}</td>
                <td>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                   
                          {{ include('location/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
                                    </tbody>
                                </table>
                           
         
    <!-- end wrapper -->

    

